@model LinkUp.Application.DTOs.Social.PostFeedItemDto

@{
    var state = Model.MyReactionIsLike == true
        ? "liked"
        : (Model.MyReactionIsDislike == true ? "disliked" : "none");
    var hideLike = state == "liked" ? "d-none" : "";
    var hideDislike = state == "disliked" ? "d-none" : "";
    var labelClass = state == "none" ? "d-none" : "";
    var labelText = state == "liked" ? "Me gusta" : (state == "disliked" ? "No me gusta" : "");
}

<form asp-antiforgery="true" class="reaction-bar d-flex align-items-center gap-3 mt-2">
    <button type="button"
            class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1 @hideLike"
            data-react="like"
            data-post-id="@Model.Id">
        <i class="bi bi-hand-thumbs-up"></i>
        <span data-like-count>@Model.LikeCount</span>
    </button>

    <button type="button"
            class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1 @hideDislike"
            data-react="dislike"
            data-post-id="@Model.Id">
        <i class="bi bi-hand-thumbs-down"></i>
        <span data-dislike-count>@Model.DislikeCount</span>
    </button>

    <small data-reaction-label class="text-muted @labelClass">@labelText</small>
</form>
