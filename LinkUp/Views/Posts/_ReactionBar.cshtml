@model LinkUp.Application.DTOs.Social.PostFeedItemDto
<form asp-antiforgery="true"></form>
<div class="d-flex gap-2">
    <button type="button"
            class="btn btn-outline-secondary @(Model.MyReactionIsLike == true ? "btn-success" : "")"
            data-react="like"
            data-post-id="@Model.Id">
        👍 <span data-like-count>@Model.LikeCount</span>
    </button>

    <button type="button"
            class="btn btn-outline-secondary @(Model.MyReactionIsDislike == true ? "btn-danger" : "")"
            data-react="dislike"
            data-post-id="@Model.Id">
        👎 <span data-dislike-count>@Model.DislikeCount</span>
    </button>
</div>
