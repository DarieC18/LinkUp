@model LinkUp.Application.DTOs.Social.EditPostRequest
@{
    var currentImage = ViewBag.CurrentImage as string;
}

<h2 class="mb-3">Editar publicación</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PostId" />

    <div class="mb-3">
        <label class="form-label">Contenido</label>
        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nueva imagen (opcional)</label>
            <input asp-for="Image" type="file" class="form-control" />
            @if (!string.IsNullOrEmpty(currentImage))
            {
                <div class="mt-2">
                    <img src="@currentImage" class="img-fluid rounded" style="max-height:160px" />
                </div>
            }
        </div>
        <div class="col-md-6">
            <label class="form-label">URL de YouTube (opcional)</label>
            <input asp-for="YouTubeUrl" class="form-control" />
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary">Guardar cambios</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
