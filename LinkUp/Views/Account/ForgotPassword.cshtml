@model LinkUp.Application.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Olvidé mi contraseña";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope fs-1 text-primary"></i>
                        <h1 class="h4 mt-2">¿Olvidaste tu contraseña?</h1>
                        <p class="text-muted mb-0">Te enviaremos instrucciones al correo.</p>
                    </div>

                    @Html.ValidationSummary(excludePropertyErrors: true, message: null, htmlAttributes: new { @class = "text-danger mb-3" })

                    <form asp-action="ForgotPassword" method="post" class="vstack gap-3">
                        @Html.AntiForgeryToken()

                        <div>
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-at"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="tucorreo@ejemplo.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2" type="submit">
                            <i class="bi bi-send"></i><span>Enviar instrucciones</span>
                        </button>

                        <div class="d-grid d-md-flex gap-2 mt-2">
                            <a asp-action="Login" class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-box-arrow-in-left"></i> Volver al login
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3 small text-muted">
                    ¿Problemas con el correo? Revisa spam o intenta nuevamente.
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
