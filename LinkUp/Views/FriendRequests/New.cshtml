@model List<LinkUp.Application.DTOs.UserSelectableDto>
@{
    ViewData["Title"] = "Nueva solicitud";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Enviar nueva solicitud de amistad</h3>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Info"] != null)
{
    <div class="alert alert-success">@TempData["Info"]</div>
}

<form asp-action="SendRequest" method="post" class="card border-0 shadow-sm">
    @Html.AntiForgeryToken()

    <div class="card-body">
        <div class="d-flex align-items-stretch gap-2 mb-3">
            <input type="text"
                   id="searchBox"
                   name="search"
                   value="@ViewBag.Search"
                   class="form-control"
                   placeholder="Buscar usuario..." aria-label="Buscar usuario" />
        </div>

        @if (!Model.Any())
        {
            <div class="text-muted">No hay usuarios disponibles para enviar solicitud.</div>
        }
        else
        {
            <div class="list-group">
                @foreach (var u in Model)
                {
                    var inputId = $"select-user-{u.Id}";
                    <label class="list-group-item d-flex justify-content-between align-items-center" for="@inputId">
                        <div class="d-flex align-items-center gap-2">
                            @if (!string.IsNullOrEmpty(u.AvatarPath))
                            {
                                <img src="@u.AvatarPath"
                                     class="rounded-circle flex-shrink-0"
                                     width="40" height="40"
                                     alt="Avatar de @u.FullName" />
                            }
                            else
                            {
                                <img src="/img/default-avatar.png"
                                     class="rounded-circle flex-shrink-0"
                                     width="40" height="40"
                                     alt="Avatar por defecto" />
                            }
                            <div>
                                <div class="fw-semibold">@u.FullName</div>
                                <small class="text-muted">@u.MutualFriendsCount amigos en común</small>
                            </div>
                        </div>

                        <input id="@inputId"
                               type="radio"
                               name="selectedUserId"
                               value="@u.Id"
                               class="form-check-input ms-2" />
                    </label>
                }
            </div>
        }
    </div>

    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-send"></i> Enviar solicitud
        </button>
    </div>
</form>

@section Scripts {
    <script>
        (function () {
            const searchBox = document.getElementById("searchBox");
            if (!searchBox) return;

            searchBox.addEventListener("keyup", function () {
                const term = this.value.toLowerCase();
                document.querySelectorAll(".list-group .list-group-item").forEach(item => {
                    const match = item.textContent.toLowerCase().includes(term);
                    item.style.display = match ? "" : "none";
                });
            });
        })();
    </script>
}
