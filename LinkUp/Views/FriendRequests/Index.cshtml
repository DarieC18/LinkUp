@model LinkUp.Application.ViewModels.Friends.FriendRequestsIndexVm

@{
    ViewData["Title"] = "Solicitudes";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var tokens = Antiforgery.GetAndStoreTokens(Context);
}

<input type="hidden" name="__RequestVerificationToken" value="@tokens.RequestToken" />

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Solicitudes</h2>
    <a asp-action="New" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i> Nueva solicitud
    </a>
</div>

@if (TempData["Info"] != null)
{
    <div class="alert alert-success">@TempData["Info"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row g-4">

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex align-items-center justify-content-between">
                <span class="fw-bold">Recibidas</span>
            </div>

            <div class="card-body p-0">
                @if (!Model.Received.Any())
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-inbox mb-2 d-block" style="font-size:1.5rem;"></i>
                        No tienes solicitudes pendientes.
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var r in Model.Received)
                        {
                            <div class="list-group-item">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(r.AvatarUrl))
                                        {
                                            <img src="@r.AvatarUrl"
                                                 class="rounded-circle flex-shrink-0 me-3"
                                                 width="40" height="40"
                                                 alt="Avatar de @r.DisplayName" />
                                        }
                                        <div>
                                            <div class="fw-semibold">@r.DisplayName</div>
                                            <div class="text-muted small">
                                                @r.MutualFriendsCount amistades en común
                                            </div>
                                            <div class="text-muted small">
                                                Recibida @r.CreatedAtUtc.ToLocalTime()
                                            </div>
                                        </div>
                                    </div>
                                    <div class="ms-3 text-nowrap">
                                        <a asp-action="Accept"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-success me-1">
                                            Aceptar
                                        </a>
                                        <a asp-action="Reject"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            Rechazar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex align-items-center justify-content-between">
                <span class="fw-bold">Enviadas</span>
            </div>

            <div class="card-body p-0">
                @if (!Model.Sent.Any())
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-send mb-2 d-block" style="font-size:1.5rem;"></i>
                        No has enviado solicitudes.
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var r in Model.Sent)
                        {
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(r.AvatarUrl))
                                    {
                                        <img src="@r.AvatarUrl"
                                             class="rounded-circle flex-shrink-0 me-3"
                                             width="40" height="40"
                                             alt="Avatar de @r.DisplayName" />
                                    }
                                    <div class="flex-grow-1">
                                        <div class="fw-semibold">@r.DisplayName</div>
                                        <div class="text-muted small">
                                            @r.MutualFriendsCount amistades en común
                                        </div>
                                        <div class="text-muted small">
                                            Enviada @r.CreatedAtUtc.ToLocalTime()
                                        </div>
                                    </div>

                                    <div class="ms-3 text-nowrap">
                                        <a asp-action="Cancel"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-outline-secondary">
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
